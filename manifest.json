{
  "manifest_version": 3,
  "name": "CodeTint",
  "version": "0.0.1",
  "description": "Pick, copy, and convert colors to CSS, Tailwind, Android XML, iOS, and Flutter.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/codetint_icon_128.png"
    }
  },
  "icons": {
    "128": "icons/codetint_icon_128.png"
  },
  "permissions": [
    "storage",
    "offscreen",
    "clipboardRead",
    "clipboardWrite",
    "scripting",
    "activeTab"
  ],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "sw.js", "type": "module" },
  "commands": {
    "pick-screen-color": {
      "suggested_key": { "default": "Alt+C" },
      "description": "Pick color and copy in selected format"
    },
    "convert-color-format": {
      "suggested_key": { "default": "Alt+D" },
      "description": "Convert clipboard color format"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
