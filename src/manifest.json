{
  "manifest_version": 3,
  "name": "CodeTint",
  "version": "1.0.0",
  "description": "Pick, copy, and convert colors to CSS, Tailwind, Android XML, iOS, and Flutter.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": { "128": "icons/codetint_icon_128.png" }
  },
  "icons": { "128": "icons/codetint_icon_128.png" },
  "permissions": ["storage", "scripting", "activeTab", "clipboardWrite"],
  "background": { "service_worker": "sw.js", "type": "module" },
  "commands": {
    "_execute_action": {
      "suggested_key": { "default": "Alt+X", "mac": "Alt+X" },
      "description": "Open CodeTint popup"
    },
    "pick-screen-color": {
      "suggested_key": { "default": "Alt+C" },
      "description": "Pick color and copy in selected format"
    },
    "convert-color-format": {
      "suggested_key": { "default": "Alt+D" },
      "description": "Open converter overlay"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/color.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
